{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 9901,
  "host": [

  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type",
        "Authorization"
      ],
      "allow_headers": [
        "Accept-Language",
        "Authorization"
      ],
      "max_age": "12h",
      "allow_credentials": true,
      "debug": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/stocks/list",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/myrealm/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/v1/stocks",
          "host": [
            "http://microservice1:3000"
          ],
          "method": "GET",
          "encoding": "json",
          "is_collection": true,
          "mapping": {
            "collection": "data"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/stock/{stockID}/prices",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/myrealm/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/v1/stock/{stockID}/prices",
          "host": [
            "http://microservice2:3001"
          ],
          "is_collection": true,
          "target": "",
          "mapping": {
            "collection": "prices"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/stocks/search",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/stocks/search",
          "encoding": "json",
          "method": "GET",
          "is_collection": true,
          "mapping": {
            "collection": "data"
          },
          "host": [
            "http://microservice1:3000"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "company"
      ]
    },
    {
      "endpoint": "/v1/stock/{stockID}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/stock/{stockID}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://microservice1:3000"
          ],
          "disable_host_sanitize": false,
          "is_collection": false,
          "mapping": {},
          "target": ""
        },
        {
          "url_pattern": "/v1/stock/{stockID}/prices",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://microservice2:3001"
          ],
          "is_collection": true,
          "mapping": {
            "collection": "prices"
          },
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "debug_endpoint": true
}